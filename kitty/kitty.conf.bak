shell /bin/zsh
# shell /etc/profiles/per-user/patricorgi/bin/bash # to use nix-darwin

################################### GENERAL ####################################
allow_remote_control   yes
file_transfer_confirmation_bypass
copy_on_select         yes
click_interval        -1.0

##################################### FONT #####################################
include                font.conf
# font_family	       JetBrainsMono Nerd Font Mono
# font_family	       Maple Mono Nerd Font
disable_ligatures      cursor
box_drawing_scale      0.5, 0.8, 1.0, 1.5

#################################### WINDOW ####################################
hide_window_decorations        titlebar-only
dynamic_background_opacity     yes
background_opacity             0.92
background_blur                32
window_padding_width           5

#################################### CURSOR ####################################
cursor_trail 20
cursor_trail_start_threshold 10
cursor_trail_decay 0.0 0.3
cursor_blink_interval 0
detect_urls no
mouse_hide_wait 0.5
mouse_wheel_scroll_multiplier 2.0

##################################### TAB ######################################
tab_bar_edge                top
tab_bar_style               powerline
tab_powerline_style         round

################################### KEYBINDINGS ################################
include mappings.conf

#################################### HIGHLIGHT #################################
# mark1_foreground #74c7ec
# mark1_background #1E1E2E
# mark2_foreground #F9E2AF
# mark2_background #1E1E2E
# mark3_foreground #F38BA8
# mark3_background #1E1E2E
toggle_marker regex 1 \\bINFO\\b 2 \\bWARNING\\b 3 \\bERROR\\b 3 \\bFATAL\\b
map ctrl+shift+m toggle_marker regex 1 \\bINFO\\b 2 \\bWARNING\\b 3 \\bERROR\\b 3 \\bFATAL\\b

# BEGIN_KITTY_THEME
# Gruvbox Material Dark Soft
include current-theme.conf
# END_KITTY_THEME

window_title_format kitty
